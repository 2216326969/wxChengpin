/* pages/linux/linux.wxss */
.img{
  width: 100%;
  height: 180px;
}
.title{
  text-align: center;
  font-weight: bold;
  line-height: 35px;
  color: #1b5ca5;
}
.ig{
  width: 90%;
  height: 400rpx;
  display: block;
  margin: auto;
}
.top{
  margin-top: 8%;
}
.quarters image{
  width: 90%;
  display: block;
  margin: auto;
}
.quarters_txt{
  font-size: 30rpx;
  width: 80%;
  margin: auto;
  text-align: center;
  margin-top: 3%;
  color: #333;
}
.btns{
  display: flex;
  justify-content: space-around;
  width: 90%;
  margin: auto;
  flex-wrap: wrap;
}
.btns view{
  border: 1px solid #1b5ca5;
  padding: 1%;
  width: 29%;
  font-size: 26rpx;
  box-sizing: border-box;
  margin-top: 2%;
  text-align: center;
  color: #1b5ca5;
}
.course{
  margin-top: 5%;
}
.content1{
  width: 85%;
  padding: 3% ;
  margin: 5% auto;
  background-color: #eee;
  box-shadow: 2px 2px 10px 5px rgba(0,0,0,0.2);
  border-radius: 3px;
  text-indent: 14px; 
  font-size: 29rpx;
  color: #333;
}
.active{
  background-color: #1b5ca5;
  color: #fff !important;
}
.more{
  /*
  2 187 189
  1 137 199
  **/
  background-image: linear-gradient(to right, rgb(2, 187, 189), rgb(1, 137, 199));
  margin-top: 8%;
  padding: 5% 0;
}
.more_tit{
  text-align: center;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
}
.btn{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.btn view{
  width: 30%;
  border: 1px solid #fff;
  padding: 2% 3%;
  text-align: center;
  border-radius: 23px;
  margin-top: 5%;
  color: #fff;
}
.btn_active{
  background: #fff;
  color: rgb(1,162,194) !important;
}
